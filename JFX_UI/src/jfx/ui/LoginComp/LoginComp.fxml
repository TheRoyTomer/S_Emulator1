<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
          minHeight="400.0" minWidth="500.0"
          prefHeight="600.0" prefWidth="800.0"
          stylesheets="@../MainComp/MainCompCSS.css, @LoginCompCSS.css"
          xmlns="http://javafx.com/javafx/21"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="jfx.ui.LoginComp.LoginCompController">

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="5.0" />
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="5.0" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES" percentHeight="5.0" />
        <RowConstraints vgrow="SOMETIMES" percentHeight="10.0" />
        <RowConstraints vgrow="SOMETIMES" percentHeight="10.0" />
        <RowConstraints vgrow="SOMETIMES" percentHeight="10.0" />
        <RowConstraints vgrow="SOMETIMES" percentHeight="5.0" />
        <RowConstraints vgrow="SOMETIMES" percentHeight="10.0" />
        <RowConstraints vgrow="SOMETIMES" percentHeight="5.0" />
        <RowConstraints vgrow="SOMETIMES" percentHeight="10.0" />
        <RowConstraints vgrow="SOMETIMES" percentHeight="5.0" />
        <RowConstraints vgrow="SOMETIMES" percentHeight="10.0" />
        <RowConstraints vgrow="SOMETIMES" percentHeight="10.0" />
        <RowConstraints vgrow="SOMETIMES" percentHeight="10.0" />
    </rowConstraints>

    <children>
        <Label fx:id="mainTitleLabel" text="S-Emulator"
               GridPane.columnIndex="3" GridPane.columnSpan="5"
               GridPane.rowIndex="2" GridPane.rowSpan="2"
               GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>

        <Label fx:id="usernamePromptLabel" text="Username:"
               GridPane.columnIndex="3" GridPane.columnSpan="5"
               GridPane.rowIndex="5"
               GridPane.halignment="CENTER" GridPane.valignment="BOTTOM">
            <GridPane.margin>
                <Insets bottom="5.0" />
            </GridPane.margin>
        </Label>

        <TextField fx:id="usernameField"
                   promptText="Enter your username"
                   GridPane.columnIndex="2" GridPane.columnSpan="7"
                   GridPane.rowIndex="6"
                   GridPane.halignment="CENTER" GridPane.valignment="CENTER"
                   maxWidth="400.0">
            <font>
                <Font size="16.0" />
            </font>
        </TextField>

        <Button fx:id="loginButton"
                text="Login"
                onAction="#onLogin"
                prefHeight="45.0" prefWidth="150.0"
                GridPane.columnIndex="4" GridPane.columnSpan="3"
                GridPane.rowIndex="8"
                GridPane.halignment="CENTER" GridPane.valignment="CENTER">
        </Button>

        <Label fx:id="errorLabel"
               textFill="RED"
               GridPane.columnIndex="2" GridPane.columnSpan="7"
               GridPane.rowIndex="10"
               GridPane.halignment="CENTER" GridPane.valignment="TOP">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
    </children>
</GridPane>
