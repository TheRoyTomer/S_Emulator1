<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<SplitPane dividerPositions="0.7" minHeight="300.0" minWidth="400.0" orientation="VERTICAL" prefHeight="500.0" prefWidth="550.0" stylesheets="@ViewCompCSS.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jfx.ui.ViewComp.ViewCompController">
    <items>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <HBox spacing="5.0">
                    <children>
                  <ComboBox fx:id="programSelectorComboBox" onAction="#handleProgramSelector" prefWidth="150.0" promptText="Function selector" />
                        <Button fx:id="collapseButton" mnemonicParsing="false" onAction="#handleCollapse" prefWidth="90.0" text="Collapse">
                            <font>
                                <Font size="12.0" />
                            </font></Button>
                        <Label id="CurrMaxlbl" fx:id="currMaxDegreeLabel" prefWidth="100.0" text="Current\Max degree">
                            <font>
                                <Font size="12.0" />
                            </font></Label>
                        <Button fx:id="expandButton" mnemonicParsing="false" onAction="#handleExpand" prefWidth="90.0" text="Expand">
                            <font>
                                <Font size="12.0" />
                            </font></Button>
                        <ComboBox id="HightlightCombo" fx:id="highlightSelectorCombo" prefWidth="150.0" promptText="Highlight" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <fx:include fx:id="instructionsTable" source="../InstructionTableView/instructionsTable.fxml" VBox.vgrow="ALWAYS" />
                <Label id="summaryLbl" fx:id="summeryLineLabel" alignment="CENTER" contentDisplay="CENTER" text="Summary line" />
            </children>
        </VBox>
        <fx:include fx:id="instructionHistoryChainTable" source="../InstructionTableView/instructionsTable.fxml" />
    </items>
</SplitPane>
