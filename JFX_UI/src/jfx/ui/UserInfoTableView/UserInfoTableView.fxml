<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="jfx.ui.UserInfoTableView.UserInfoTableViewController"
      spacing="5" fillWidth="true" style="-fx-border-color: #cccccc; -fx-border-width: 1;">
    <padding>
        <Insets top="5" right="5" bottom="5" left="5"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER" spacing="5">
        <Label text="Available Users" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Unselect button -->
    <HBox alignment="CENTER">
        <Button fx:id="unselectUserBtn"
                text="Unselect User"
                prefWidth="120"
                onAction="#handleUnselectUser"/>
    </HBox>

    <!-- Table -->
    <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="userNameColumn" text="Name" minWidth="80.0" maxWidth="1.7976931348623157E308" prefWidth="70.0"/>
            <TableColumn fx:id="uploadedProgramsColumn" text="Programs" minWidth="73.0" maxWidth="73.0" prefWidth="73.0"/>
            <TableColumn fx:id="uploadedFunctionsColumn" text="Functions" minWidth="80.0" maxWidth="80.0" prefWidth="80.0"/>
            <TableColumn fx:id="currentCreditsColumn" text="Credits" minWidth="65.0" maxWidth="65.0" prefWidth="65.0"/>
            <TableColumn fx:id="usedCreditsColumn" text="Used" minWidth="60.0" maxWidth="60.0" prefWidth="60.0"/>
            <TableColumn fx:id="executionsColumn" text="Execs" minWidth="60.0" maxWidth="60.0" prefWidth="60.0"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>
