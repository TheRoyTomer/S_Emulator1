<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" minHeight="200.0" prefHeight="280.0" spacing="4.0" styleClass="execution-vbox" stylesheets="@ExecutionCompCSS.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jfx.ui.ExecutionComp.ExecutionCompController">
    <children>
        <HBox alignment="CENTER" spacing="8.0" prefHeight="34.0">
            <children>
                <Button fx:id="newRunButton" mnemonicParsing="false" onAction="#onNewRun" prefWidth="110.0" text="New Run" HBox.hgrow="ALWAYS" />
                <Button fx:id="executeButton" mnemonicParsing="false" onAction="#onExecutePress" prefWidth="95.0" text="Execute" HBox.hgrow="ALWAYS" />
                <Button fx:id="debugButton" mnemonicParsing="false" onAction="#onDebugPress" prefWidth="80.0" text="Debug" HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets left="6.0" right="6.0" top="2.0" bottom="2.0" />
            </padding>
        </HBox>

        <HBox alignment="CENTER" spacing="8.0" prefHeight="34.0">
            <children>
                <Button fx:id="breakpointButton" mnemonicParsing="false" onAction="#onBreakpointPress" prefWidth="150.0" text="Breakpoint" HBox.hgrow="ALWAYS" />
                <Button fx:id="stepOverButton" mnemonicParsing="false" onAction="#onStepOver" prefWidth="150.0" text="Step Over" HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets left="6.0" right="6.0" top="2.0" bottom="2.0" />
            </padding>
        </HBox>

        <HBox alignment="CENTER" spacing="8.0" prefHeight="34.0">
            <children>
                <Button fx:id="stopButton" mnemonicParsing="false" onAction="#onStop" prefWidth="150.0" text="Stop" HBox.hgrow="ALWAYS" />
                <Button fx:id="resumeButton" mnemonicParsing="false" onAction="#onResume" prefWidth="150.0" text="Resume" HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets left="6.0" right="6.0" top="2.0" bottom="2.0" />
            </padding>
        </HBox>

        <HBox spacing="6.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox HBox.hgrow="ALWAYS" spacing="3.0">
                    <children>
                        <fx:include fx:id="varTableComp" source="../VarsTableView/VarsTableViewXML.fxml" VBox.vgrow="ALWAYS" />
                        <Label fx:id="cyclesLabel" text="Cycles: 0" id="cyclesLabel" />
                    </children>
                </VBox>
                <VBox HBox.hgrow="ALWAYS" spacing="3.0">
                    <children>
                        <ComboBox fx:id="architectureSelectionComboBox" prefWidth="200.0" promptText="Architecture Selection" maxWidth="Infinity" VBox.vgrow="NEVER" />
                        <fx:include fx:id="inputVarsComp" source="../VariableInputsTableView/VariableInputsTableView.fxml" VBox.vgrow="ALWAYS" />
                        <Button fx:id="backToDashboardButton" mnemonicParsing="false" onAction="#onBackToDashboard" text="Back to Dashboard" prefHeight="35.0" maxWidth="Infinity" styleClass="success" VBox.vgrow="NEVER" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets top="3.0" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
    </padding>
</VBox>