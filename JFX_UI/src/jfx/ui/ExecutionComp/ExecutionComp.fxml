<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" stylesheets="@ExecutionCompCSS.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jfx.ui.ExecutionComp.ExecutionCompController">
   <children>
      <HBox alignment="TOP_CENTER" spacing="10.0">
         <children>
            <Button fx:id="newRunButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onNewRun" text="New run" HBox.hgrow="ALWAYS" />
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="executeButton" mnemonicParsing="false" onAction="#onExecutePress" text="Execute" />
                  <Button fx:id="debugButton" mnemonicParsing="false" onAction="#onDebugPress" text="Debug" />
               </children>
            </HBox>
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="10.0">
         <children>
            <Button fx:id="resumeButton" mnemonicParsing="false" onAction="#onResume" text="Resume" />
            <Button fx:id="stopButton" mnemonicParsing="false" onAction="#onStop" text="Stop" />
            <Button fx:id="stepOverButton" mnemonicParsing="false" onAction="#onStepOver" text="Step Over" />
         </children>
      </HBox>
      <HBox>
         <children>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <fx:include fx:id="varTableComp" source="../VarsTableView/VarsTableViewXML.fxml" />
                  <Label fx:id="cyclesLabel" text="Cycles" />
               </children>
            </VBox>
            <fx:include fx:id="inputVarsComp" source="../VariableInputsTableView/VariableInputsTableView.fxml" />
         </children>
      </HBox>
   </children>
</VBox>
