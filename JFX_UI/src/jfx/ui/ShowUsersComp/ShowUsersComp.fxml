<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.VBox?>

<SplitPane dividerPositions="0.6" orientation="VERTICAL"
           xmlns="http://javafx.com/javafx/24.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="jfx.ui.ShowUsersComp.ShowUsersCompController">
    <items>
        <!-- User Info Table (60%) -->
        <fx:include fx:id="userInfoTableView" source="../UserInfoTableView/UserInfoTableView.fxml"/>

        <!-- History Component (40%) -->
        <VBox spacing="5" style="-fx-border-color: #cccccc; -fx-border-width: 1;">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>
            <Label text="Users History \ Statistics" style="-fx-font-size: 13px; -fx-font-weight: bold;"/>
            <fx:include fx:id="historyComp" source="../HistoryComp/HistoryComp.fxml"/>
        </VBox>
    </items>
</SplitPane>
